# Database Configuration
DATABASE_URL=postgresql://retailer:retailer123@localhost:5432/retailer_db

# Application Settings
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8100
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# External Services (Dummy/Mock)
STRIPE_API_KEY=dummy_stripe_key
STRIPE_WEBHOOK_SECRET=dummy_webhook_secret

# Email Settings (for low stock alerts)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=alerts@retailer.com
EMAIL_PASSWORD=your-email-password

# S3 / LocalStack
S3_ENDPOINT_URL=http://localhost:4566
S3_PUBLIC_URL=http://localhost:4566
S3_BUCKET_NAME=retailer-product-images
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# LLM Settings (ChatGPT via OpenAI)
# Get your API key from: https://platform.openai.com/api-keys
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2
LLM_MAX_TOOL_CALLS=4
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Stock Monitoring
LOW_STOCK_THRESHOLD=10
STOCK_CHECK_INTERVAL_SECONDS=300
